{
  "name": "ponyfm",
  "version": "1.0.0",
  "description": "A proof-of-concept Pony.fm implementation",
  "scripts": {
    "test": "tsc && karma start --single-run --browsers PhantomJS",
    "test:w": "karma start",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "start": "concurrent \"npm run tsc:w\" \"npm run lite\" ",
    "clean": "rimraf app/*.js app/*.js.map app/**/*.js* app/**/*.js.map"
  },
  "author": "berwyn <berwyn.codeweaver@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^1.0.0",
    "jasmine": "^2.4.1",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-detect-browsers": "^2.0.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-ie-launcher": "^0.2.0",
    "karma-jasmine": "^0.3.6",
    "karma-nyan-reporter": "^0.2.3",
    "karma-opera-launcher": "^0.3.0",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-safari-launcher": "^0.1.1",
    "karma-systemjs": "^0.10.0",
    "karma-typescript-preprocessor2": "^1.1.1",
    "lite-server": "^1.3.1",
    "phantomjs": "^1.9.19",
    "phantomjs-polyfill": "0.0.1",
    "rimraf": "^2.5.0",
    "typescript": "^1.7.5"
  },
  "dependencies": {
    "angular2": "^2.0.0-beta.0",
    "bootstrap": "^3.3.6",
    "es6-module-loader": "^0.17.10",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "reflect-metadata": "^0.1.2",
    "rxjs": "^5.0.0-beta.0",
    "systemjs": "^0.19.9",
    "zone.js": "^0.5.10"
  }
}
