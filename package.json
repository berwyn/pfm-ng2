{
  "name": "ponyfm",
  "version": "1.0.0",
  "description": "A proof-of-concept Pony.fm implementation",
  "repository": "berwyn/pfm-ng2",
  "scripts": {
    "pretest": "npm run build",
    "test": "karma start ./.config/karma.conf.js --single-run --browsers PhantomJS",
    "test:w": "karma start",
    "build": "tsc",
    "build:w": "tsc -w",
    "lite": "lite-server",
    "start": "concurrent \"npm run tsc:w\" \"npm run lite\" ",
    "clean": "rimraf app/*.js app/*.js.map app/**/*.js* app/**/*.js.map",
    "update": "npm install && typings install"
  },
  "author": "berwyn <berwyn.codeweaver@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^1.0.0",
    "istanbul": "^0.4.3",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-detect-browsers": "^2.0.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-ie-launcher": "^0.2.0",
    "karma-jasmine": "^0.3.6",
    "karma-nyan-reporter": "^0.2.3",
    "karma-opera-launcher": "^0.3.0",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-safari-launcher": "^0.1.1",
    "karma-systemjs": "^0.10.0",
    "karma-typescript-preprocessor2": "^1.1.1",
    "lite-server": "^1.3.1",
    "phantomjs": "^1.9.19",
    "phantomjs-polyfill": "0.0.1",
    "remap-istanbul": "^0.6.3",
    "rimraf": "^2.5.0",
    "symbol-observable": "^0.2.4",
    "typescript": "^1.7.5"
  },
  "dependencies": {
    "@angular/common": "^2.0.0-rc.1",
    "@angular/compiler": "^2.0.0-rc.1",
    "@angular/core": "^2.0.0-rc.1",
    "@angular/platform-browser": "^2.0.0-rc.1",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.1",
    "@angular/router-deprecated": "^2.0.0-rc.1",
    "bootstrap": "^3.3.6",
    "es6-module-loader": "^0.17.10",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.35.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "^5.0.0-beta.6",
    "systemjs": "^0.19.9",
    "zone.js": "^0.6.12"
  }
}
